<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".menjaRapid">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Menjar Ràpid"
        android:textColor="@color/lavender"
        android:textSize="35sp"
        android:layout_marginTop="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b7"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/macdo"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:src="@drawable/loading"
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"/>
            <LinearLayout
                android:id="@+id/t7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/macdo"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="De Dilluns a Dijous:"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="11:30h - 23:30h"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="De Diventres i Dissabte:"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="11:30h – 00:20h"/>

            </LinearLayout>


            <TextView
                android:layout_width="170dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/macdo"
                android:layout_marginTop="11dp"
                android:text="MCDonald's"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/ubi7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t7"
                android:layout_below="@+id/num7"
                android:src="@drawable/location"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/num7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t7"
                android:background="@color/transparent"
                android:src="@drawable/phone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b8"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/burger"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:src="@drawable/loading"
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"/>
            <LinearLayout
                android:id="@+id/t8"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/burger"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="De Dilluns a Dijous:"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="11:30h - 23:30h"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="De Diventres i Dissabte:"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="11:30h – 00:20h"/>

            </LinearLayout>


            <TextView
                android:layout_width="170dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/burger"
                android:layout_marginTop="11dp"
                android:text="Burguer King"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/ubi8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t8"
                android:layout_below="@+id/num8"
                android:src="@drawable/location"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/num8"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t8"
                android:background="@color/transparent"
                android:src="@drawable/phone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b9"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/dominos"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:src="@drawable/loading"
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"/>
            <LinearLayout
                android:id="@+id/t9"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dominos"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="De Dilluns a Diumenge:"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="13:00h - 00:30h"/>


            </LinearLayout>


            <TextView
                android:layout_width="170dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dominos"
                android:layout_marginTop="11dp"
                android:text="Domino's"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/ubi9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t9"
                android:layout_below="@+id/num9"
                android:src="@drawable/location"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/num9"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t9"
                android:background="@color/transparent"
                android:src="@drawable/phone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="fletxa"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:id="@+id/arrowback"
            android:src="@drawable/arrowback"/>
    </LinearLayout>
</LinearLayout>
