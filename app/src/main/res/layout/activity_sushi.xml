<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".sushi">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sushi"
        android:textColor="@color/lavender"
        android:textSize="35sp"
        android:layout_marginTop="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/atarasii"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:src="@drawable/loading"
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"/>
            <LinearLayout
                android:id="@+id/t1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/atarasii"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="De Dilluns a Diumenge:"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="12:30h - 16:30h"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="20:30h – 00:00h"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Mijdia - 15,95€"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Nit - 21,95€"/>

            </LinearLayout>

            <TextView
                android:layout_width="170dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/atarasii"
                android:layout_marginTop="11dp"
                android:text="Atarasii"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/ubi1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t1"
                android:layout_below="@+id/num1"
                android:src="@drawable/location"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/num1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t1"
                android:background="@color/transparent"
                android:src="@drawable/phone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/jiro"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:src="@drawable/loading"
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:id="@+id/t2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/jiro"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="De Dilluns a Diumenge:"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="13:00h - 16:30h"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="20:00h – 00:00h"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Mijdia - 15,95€"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Nit - 21,95€"/>

            </LinearLayout>


            <TextView
                android:layout_width="170dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jiro"
                android:layout_marginTop="11dp"
                android:text="Jiro Sushi"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/ubi2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t2"
                android:layout_below="@+id/num2"
                android:src="@drawable/location"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/num2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t2"
                android:background="@color/transparent"
                android:src="@drawable/phone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/wagaya"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:src="@drawable/loading"
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:id="@+id/t3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/wagaya"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="De Dimarts a Diumenge:"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="13:00h - 16:00h"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="20:30h – 23:30h"/>


            </LinearLayout>



            <TextView
                android:layout_width="170dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wagaya"
                android:layout_marginTop="11dp"
                android:text="Wagaya"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/ubi3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t3"
                android:layout_below="@+id/num3"
                android:src="@drawable/location"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/num3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/t3"
                android:background="@color/transparent"
                android:src="@drawable/phone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="fletxa"
            android:layout_gravity="bottom"
            android:background="@color/transparent"
            android:id="@+id/arrowback"
            android:src="@drawable/arrowback"/>
    </LinearLayout>
</LinearLayout>
